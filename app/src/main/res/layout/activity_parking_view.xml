<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParkingView"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="20dp"
        android:background="#FEEF50">

        <ImageView
            android:id="@+id/parkingLotImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/logo_name"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/parkingLotImage"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/bungee_regular"
            android:text="Nombre de parqueadero"
            android:textAlignment="center"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:id="@+id/parkingLotName"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="-50dp">
        
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#9CDDEA"
            app:cardElevation="10dp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:src="@drawable/logo_no_background"/>

                <TextView
                    android:fontFamily="@font/bungee_regular"
                    android:id="@+id/parkingLotPrice"
                    android:includeFontPadding="false"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/payment_desc"
                    android:includeFontPadding="false"
                    android:layout_below="@id/parkingLotPrice"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Precio"
                    android:textSize="20sp" />

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#9CDDEA"
            app:cardElevation="10dp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:src="@drawable/logo_no_background"/>

                <TextView
                    android:fontFamily="@font/bungee_regular"
                    android:id="@+id/parkingLotSpace"
                    android:includeFontPadding="false"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/parking_cupos_tx"
                    android:includeFontPadding="false"
                    android:layout_below="@+id/parkingLotSpace"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Cupos"
                    android:textSize="20sp" />

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/parkingLotAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee_regular"
            android:textAlignment="center"
            android:textSize="20sp"
            android:gravity="center_horizontal">

        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lunes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bungee_regular"
                android:gravity="center_horizontal"
                android:text="Horario Lunes: "
                android:textAlignment="center"
                android:textSize="15sp">

            </TextView>

            <TextView
                android:id="@+id/lunes_horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/lunes"
                android:fontFamily="@font/bungee_regular"
                android:gravity="center_horizontal"
                android:text="17:00 - 18:00"
                android:textAlignment="center"
                android:textSize="15sp">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/martes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bungee_regular"
                android:gravity="center_horizontal"
                android:text="Horario Martes: "
                android:textAlignment="center"
                android:textSize="15sp">

            </TextView>

            <TextView
                android:id="@+id/martes_horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/martes"
                android:fontFamily="@font/bungee_regular"
                android:gravity="center_horizontal"
                android:text="17:00 - 18:00"
                android:textAlignment="center"
                android:textSize="15sp">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/miercoles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bungee_regular"
                android:gravity="center_horizontal"
                android:text="Horario Miercoles: "
                android:textAlignment="center"
                android:textSize="15sp">

            </TextView>

            <TextView
                android:id="@+id/miercoles_horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/miercoles"
                android:fontFamily="@font/bungee_regular"
                android:gravity="center_horizontal"
                android:text="17:00 - 18:00"
                android:textAlignment="center"
                android:textSize="15sp">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/jueves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bungee_regular"
                android:gravity="center_horizontal"
                android:text="Horario Jueves: "
                android:textAlignment="center"
                android:textSize="15sp">

            </TextView>

            <TextView
                android:id="@+id/jueves_horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/jueves"
                android:fontFamily="@font/bungee_regular"
                android:gravity="center_horizontal"
                android:text="17:00 - 18:00"
                android:textAlignment="center"
                android:textSize="15sp">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/viernes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bungee_regular"
                android:gravity="center_horizontal"
                android:text="Horario Viernes: "
                android:textAlignment="center"
                android:textSize="15sp">

            </TextView>

            <TextView
                android:id="@+id/viernes_horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/viernes"
                android:fontFamily="@font/bungee_regular"
                android:gravity="center_horizontal"
                android:text="17:00 - 18:00"
                android:textAlignment="center"
                android:textSize="15sp">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sabado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bungee_regular"
                android:gravity="center_horizontal"
                android:text="Horario Sabado: "
                android:textAlignment="center"
                android:textSize="15sp">

            </TextView>

            <TextView
                android:id="@+id/sabado_horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/sabado"
                android:fontFamily="@font/bungee_regular"
                android:gravity="center_horizontal"
                android:text="17:00 - 18:00"
                android:textAlignment="center"
                android:textSize="15sp">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/domingo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bungee_regular"
                android:gravity="center_horizontal"
                android:text="Horario Domingo: "
                android:textAlignment="center"
                android:textSize="15sp">

            </TextView>

            <TextView
                android:id="@+id/domingo_horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/domingo"
                android:fontFamily="@font/bungee_regular"
                android:gravity="center_horizontal"
                android:text="17:00 - 18:00"
                android:textAlignment="center"
                android:textSize="15sp">

            </TextView>

        </RelativeLayout>






    </LinearLayout>


</LinearLayout>